{
    "name": "Macro Helper",
    "version": "0.1",
    "manifest_version": 3,
    "description": "This extension will record your actions and allow you to play them back.",
    "icons": {
        "16": "icons/macroHelper16x16.png",
        "32": "icons/macroHelper32x32.png",
        "48": "icons/macroHelper48x48.png",
        "128": "icons/macroHelper128x128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
              "<all_urls>"
            ],
            "js": ["lib/jquery.min.js","content-scripts/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["images/*.png"],
          "matches": ["<all_urls>"]
        }
    ]
}